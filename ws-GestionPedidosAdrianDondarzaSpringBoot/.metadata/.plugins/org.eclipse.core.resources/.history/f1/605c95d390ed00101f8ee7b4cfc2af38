package com.adriandondarza.gestionpedidos.springboot.model;

import jakarta.persistence.*;
import lombok.Data;
import lombok.NoArgsConstructor;
import java.time.LocalDate;
import java.util.ArrayList;
import java.util.List;

@Entity
@Table(name = "clientes")
@Data
@NoArgsConstructor
public class Cliente {

    @Id
    @Column(name = "nif_cif", length = 20)
    private String nifCif;

    @Column(nullable = false, length = 100)
    private String nombre;

    @Column(nullable = false, unique = true, length = 100)
    private String email;

    @Column(name = "fecha_registro", nullable = false)
    private LocalDate fechaRegistro;

    // Relación inversa (sin cascada aquí para evitar bucles)
    @OneToOne(mappedBy = "cliente", fetch = FetchType.LAZY)
    private InfoFiscal informacionFiscal;

    // AÑADIMOS CASCADE AQUÍ para que al borrar el cliente (vía InfoFiscal) 
    // también se borren sus compras y no dé error de integridad
    @OneToMany(mappedBy = "cliente", cascade = CascadeType.ALL, orphanRemoval = true, fetch = FetchType.LAZY)
    private List<Compra> compras = new ArrayList<>();
}