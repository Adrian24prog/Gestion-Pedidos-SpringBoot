package com.adriandondarza.gestionpedidos.springboot.model;

import jakarta.persistence.*;
import lombok.Data;
import lombok.NoArgsConstructor;
import lombok.ToString;

@Entity
@Table(name = "informacion_fiscal")
@Data
@NoArgsConstructor // Mantenemos el constructor vacío para Hibernate
public class InfoFiscal {

    @Id
    @Column(name = "nif_cif", length = 20)
    private String nifCif;

    @OneToOne(cascade = CascadeType.ALL, orphanRemoval = true)
    @MapsId 
    @JoinColumn(name = "nif_cif")
    @ToString.Exclude
    private Cliente cliente;

    @Column(name = "direccion_fiscal", nullable = false, length = 255)
    private String direccionFiscal;

    @Column(nullable = false, length = 20)
    private String telefono;

    // AÑADIMOS ESTE CONSTRUCTOR MANUAL
    // Esto permite al Service crear la InfoFiscal sin tener todavía el objeto Cliente
    public InfoFiscal(String nifCif, String direccionFiscal, String telefono) {
        this.nifCif = nifCif;
        this.direccionFiscal = direccionFiscal;
        this.telefono = telefono;
    }
}