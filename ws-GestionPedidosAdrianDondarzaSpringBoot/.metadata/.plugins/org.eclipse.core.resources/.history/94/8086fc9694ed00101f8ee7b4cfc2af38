package com.adriandondarza.gestionpedidos.springboot.model;

import jakarta.persistence.*;
import lombok.Data;
import lombok.NoArgsConstructor;
import java.time.LocalDate;
import java.util.ArrayList;
import java.util.List;

@Entity
@Table(name = "clientes")
@Data
@NoArgsConstructor
public class Cliente {

    @Id
    @Column(name = "nif_cif", length = 20)
    private String nifCif;

    @Column(nullable = false, length = 100)
    private String nombre;

    @Column(nullable = false, unique = true, length = 100)
    private String email;

    @Column(name = "fecha_registro", nullable = false)
    private LocalDate fechaRegistro;

    @OneToOne(mappedBy = "cliente", fetch = FetchType.LAZY)
    private InfoFiscal informacionFiscal;

    // IMPORTANTE: Sin CascadeType.REMOVE para que no borre las compras
    @OneToMany(mappedBy = "cliente", fetch = FetchType.LAZY)
    private List<Compra> compras = new ArrayList<>();

    /**
     * Este método se ejecuta automáticamente ANTES de borrar el cliente.
     * Desvincula todas las compras para que la FK en la base de datos se ponga a NULL.
     */
    @PreRemove
    private void desvincularCompras() {
        if (compras != null) {
            for (Compra compra : compras) {
                compra.setCliente(null);
            }
        }
    }
}